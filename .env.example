# =============================================================================
# SolPay - Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values
# =============================================================================

# =============================================================================
# SOLANA CONFIGURATION
# =============================================================================
# Network: 'devnet' or 'mainnet-beta'
NEXT_PUBLIC_SOLANA_NETWORK=devnet

# RPC URL - Get a free endpoint from Helius, QuickNode, or use public devnet
NEXT_PUBLIC_RPC_URL=https://api.devnet.solana.com

# =============================================================================
# LAZORKIT CONFIGURATION
# =============================================================================
# Portal URL for passkey authentication (default works for most cases)
NEXT_PUBLIC_LAZORKIT_PORTAL_URL=https://portal.lazor.sh

# Paymaster URL for gasless transactions
NEXT_PUBLIC_LAZORKIT_PAYMASTER_URL=https://kora.devnet.lazorkit.com

# Optional: Paymaster API key if required
# NEXT_PUBLIC_LAZORKIT_API_KEY=your_api_key_here

# =============================================================================
# TOKEN ADDRESSES
# =============================================================================
# USDC token mint address
# Devnet: 4zMMC9srt5Ri5X14GAgXhaHii3GnPAEERYPJgZJDncDU
# Mainnet: EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v
NEXT_PUBLIC_USDC_MINT=4zMMC9srt5Ri5X14GAgXhaHii3GnPAEERYPJgZJDncDU

# Vault wallet address - receives subscription payments
# Replace with your own wallet address!
NEXT_PUBLIC_VAULT_ADDRESS=YOUR_VAULT_WALLET_ADDRESS_HERE

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL (recommended for production)
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# =============================================================================
# APPLICATION
# =============================================================================
# Base URL of your application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Secret for cron job authentication
CRON_SECRET=your_random_secret_here_change_in_production

# =============================================================================
# MOCK MODE (for testing without real USDC)
# =============================================================================
# Set to 'true' to enable mock mode - simulates transactions without blockchain
# Great for development and demos. Data persists in browser localStorage.
NEXT_PUBLIC_MOCK_MODE=true

# =============================================================================
# OPTIONAL: DEVELOPMENT & DEBUGGING
# =============================================================================
# Enable debug mode for Lazorkit SDK
# NEXT_PUBLIC_DEBUG_MODE=true

# =============================================================================
# OPTIONAL: ANALYTICS & MONITORING
# =============================================================================
# NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
# NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn
